{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "src/*",
    "src/**/*.d.ts",
    "src/colyseus/**/*.ts",
    "src/colyseus/**/*.js"
  ],
  "exclude": ["node_modules", "**/*.spec.js"]
}
